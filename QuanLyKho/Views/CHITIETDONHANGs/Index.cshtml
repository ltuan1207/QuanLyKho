@model IEnumerable<QuanLyKho.Models.CHITIETDONHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Index</h2>

<a href="@Url.Action("Create","CHITIETDONHANGs")" class="btn btn-sm btn-success" style="padding: 12px">Thêm</a>
<button id="deleteSelectedCTDH" class="btn btn-danger" style="position:fixed">Xóa các mục đã chọn</button>
<div class="card-body">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th><input type="checkbox" id="checkAll" /></th>
                <th>Mã đơn hàng</th>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Chức năng</th>
            </tr>
        </thead>

        <tbody class="search">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><input type="checkbox" class="checkbox" value="@item.MaCTDH" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DONHANG.MaDH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","CHITIETDONHANGs",new { id = item.MaCTDH})" class="btn btn-sm btn-success">Sửa</a>
                        <a href="@Url.Action("Details","CHITIETDONHANGs",new { id = item.MaCTDH })" class="btn btn-sm btn-info">Chi tiết</a>
                        <a href="@Url.Action("Delete","CHITIETDONHANGs",new { id = item.MaCTDH })" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>