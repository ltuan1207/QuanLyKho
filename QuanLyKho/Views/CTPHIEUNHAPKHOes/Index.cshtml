@model IEnumerable<QuanLyKho.Models.CTPHIEUNHAPKHO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Chi Tiet Phieu Nhap Kho</h2>

<a href="@Url.Action("Create","CTPHIEUNHAPKHOes")" class="btn btn-outline-success"><i class="fas fa-plus"></i></a>
<button id="deleteSelectedCTPNK" class="btn btn-outline-danger" style="position:fixed; margin-left:5px"><i class="fas fa-trash-alt"></i></button>
<div class="card-body">
    <table class="table table-bordered table-striped">
        <thead class=" thead-dark"
            <tr>
                <th><input type="checkbox" id="checkAll" /></th>
                <th>Mã phiếu nhập kho</th>
                <th>Sản phẩm</th>
                <th>Vị trí</th>
                <th>Đơn vị tính</th>
                <th>Khối lượng</th>
                <th>So luong nhap</th>
                <th>Đơn giá</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody class="search">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><input type="checkbox" class="checkbox" value="@item.MaCTPNK" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PHIEUNHAPKHO.MaPNK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VITRIKHO.TenVTK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DoviTinh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Khoiluong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongNhap)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGiaN)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","CTPHIEUNHAPKHOes",new { id = item.MaCTPNK})" class="btn btn-outline-dark">Sửa</a>
                        <a href="@Url.Action("Details","CTPHIEUNHAPKHOes",new { id = item.MaCTPNK })" class="btn btn-outline-info">Chi tiết</a>
                        <a href="@Url.Action("Delete","CTPHIEUNHAPKHOes",new { id = item.MaCTPNK })" class="btn btn-outline-danger">Xóa</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
