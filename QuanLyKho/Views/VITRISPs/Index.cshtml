@model IEnumerable<QuanLyKho.Models.VITRISP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Index vi tri san pham</h2>

<a href="@Url.Action("Create", "VITRISPs")" class="btn btn-sm btn-success" style="padding:8px">Thêm</a>
<button id="deleteSelectedVTSP" class="btn btn-danger" style="position:fixed">Xóa các mục đã chọn</button>
<div class="card-body">
    <table class="table table-bordered">
        <tr>
            <th><input type="checkbox" id="checkAll" /></th>
            <th>Sản phẩm</th>
            <th>Vị trí trong kho</th>
            <th>Số lượng</th>
            <th>Chức năng</th>
        </tr>

        <tbody class="search">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><input type="checkbox" class="checkbox" value="@item.MaVTSP" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VITRIKHO.TenVTK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","VITRISPs",new { id = item.MaVTSP})" class="btn btn-sm btn-success">Sửa</a>
                        <a href="@Url.Action("Details","VITRISPs",new { id = item.MaVTSP })" class="btn btn-sm btn-info">Chi tiết</a>
                        <a href="@Url.Action("Delete","VITRISPs",new { id = item.MaVTSP})" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>