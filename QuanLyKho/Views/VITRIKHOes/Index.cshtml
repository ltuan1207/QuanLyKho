@model IEnumerable<QuanLyKho.Models.VITRIKHO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Index vi tri kho</h2>

<a href="@Url.Action("Create", "VITRIKHOes")" class="btn btn-outline-success" style="padding:6px 14px"><i class="fas fa-plus"></i></a>
<button id="deleteSelectedVTK" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i></button>
<div class=" card-body">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th><input type="checkbox" id="checkAll" /></th>
                <th>Kho</th>
                <th>Vị trí trong kho</th>
                <th>Mô tả</th>
                <th>Chức năng </th>
            </tr>
        </thead>

        <tbody class="search">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><input type="checkbox" class="checkbox" value="@item.MaVTK" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KHOHANG.TenKhohang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenVTK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td style="display:flex; border-bottom:0">
                        <a href="@Url.Action("Edit","VITRIKHOes",new { id = item.MaVTK})" class="btn btn-outline-dark">Sửa</a>  
                        <a href="@Url.Action("Details","VITRIKHOes",new { id = item.MaVTK })" class="btn btn-outline-info">Chi tiết</a>  
                        <a href="@Url.Action("Delete","VITRIKHOes",new { id = item.MaVTK})" class="btn btn-outline-danger">Xóa</a>
                    </td>
                </tr>
            }
         </tbody>
    </table>
</div>