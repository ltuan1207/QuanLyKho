@model IEnumerable<QuanLyKho.Models.PHIEUXUATKHO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Index phieu xuat kho</h2>

<a href="@Url.Action("Create","PHIEUXUATKHOes")" class="btn btn-outline-success" style="padding: 6px 14px; margin-right:3px"><i class="fas fa-plus"></i></a>
<button id="deleteSelectedPXK" class="btn btn-outline-danger" style="position:fixed"><i class="fas fa-trash-alt"></i></button>
<div class="card-body">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th><input type="checkbox" id="checkAll" /></th>
                <th>Mã Phiếu</th>
                <th>Ngày xuất</th>
                <th>Tổng tiền</th>
                <th>Chức năng</th>
            </tr>
        </thead>

        <tbody class="search" style="font-size:13px">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><input type="checkbox" class="checkbox" value="@item.MaPXK" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaPXK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayXuat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TongGTXuat)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","PHIEUXUATKHOes",new { id = item.MaPXK})" class="btn btn-outline-dark">Sửa</a>
                        <a href="@Url.Action("Details","PHIEUXUATKHOes",new { id = item.MaPXK })" class="btn btn-outline-success">Chi tiết</a>
                        <a href="@Url.Action("Delete","PHIEUXUATKHOes",new { id = item.MaPXK })" class="btn btn-outline-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>