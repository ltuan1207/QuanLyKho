@model IEnumerable<QuanLyKho.Models.PHIEUXUATKHO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Index phieu xuat kho</h2>

<a href="@Url.Action("Create","PHIEUXUATKHOes")" class="btn btn-sm btn-success" style="padding: 12px">Thêm</a>
<button id="deleteSelectedPXK" class="btn btn-danger" style="position:fixed">Xóa các mục đã chọn</button>
<div class="card-body">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th><input type="checkbox" id="checkAll" /></th>
                <th>Mã Phiếu</th>
                <th>Ngày xuất</th>
                <th>Tổng tiền</th>
                <th>Chức năng</th>
            </tr>
        </thead>

        <tbody class="search" style="font-size:13px">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><input type="checkbox" class="checkbox" value="@item.MaPXK" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaPXK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayXuat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TongGTXuat)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","PHIEUXUATKHOes",new { id = item.MaPXK})" class="btn btn-sm btn-success">Sửa</a>
                        <a href="@Url.Action("Details","PHIEUXUATKHOes",new { id = item.MaPXK })" class="btn btn-sm btn-info">Chi tiết</a>
                        <a href="@Url.Action("Delete","PHIEUXUATKHOes",new { id = item.MaPXK })" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>